{
  "hosting": [
    {
      "target": "studio",
      "public": ".next",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{
        "source": "**",
        "run": { "serviceId": "studio", "region": "us-central1" }
      }]
    },
    {
      "target": "xeref",
      "public": ".next",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [{
        "source": "**",
        "run": { "serviceId": "xeref", "region": "us-central1" }
      }]
    }
  ]
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write their own documents
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Security Rules for the new "Audio-to-Debrief" feature
    match /debriefJobs/{jobId} {
      // A user can create a job if the new document's userId matches their own.
      allow create: if request.resource.data.userId == request.auth.uid;

      // A user can read or update their own job document.
      allow read, update: if resource.data.userId == request.auth.uid;

      // Deletion is not allowed for users.
      allow delete: if false;
    }
  }
}
